<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane fx:id="mainPane" xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="ru.kpfu.itis.arifulina.fxml.controller.MainPageController"
            prefHeight="400.0" prefWidth="600.0">

    <children>
        <HBox alignment="CENTER" spacing="10" AnchorPane.topAnchor="10" AnchorPane.rightAnchor="10"
              AnchorPane.leftAnchor="10">
            <children>
                <Label fx:id="label" text="/"/>
                <TextField fx:id="message" prefWidth="0" HBox.hgrow="ALWAYS"/>
                <Button fx:id="submit" prefWidth="0" minWidth="70" HBox.hgrow="ALWAYS"/>
            </children>
        </HBox>
        <TextArea fx:id="messages" AnchorPane.topAnchor="50" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10">

        </TextArea>
    </children>

</AnchorPane>
